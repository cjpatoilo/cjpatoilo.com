    "google-fonts": "1.0.0",
    "milligram": "1.4.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-ga": "3.0.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.1",
    "styled-components": "5.1.1",
    "typescript": "3.9.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.0",
    "@testing-library/react": "10.4.3",
    "@testing-library/user-event": "12.0.11",
    "@types/google-fonts": "1.0.0",
    "@types/jest": "26.0.4",
    "@types/node": "14.0.14",
    "@types/react": "16.9.41",
    "@types/react-dom": "16.9.8",
