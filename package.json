    "@types/react-router-dom": "5.1.5",
    "@types/styled-components": "5.1.1",
    "gh-pages": "3.1.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier-standard": "16.4.1",
    "surge": "0.21.6"
  },
  "scripts": {
    "build": "react-scripts build",
    "deploy:production": "NODE_ENV=production npm run build && gh-pages -d build -b master",
    "deploy:staging": "NODE_ENV=staging npm run build && surge -p build -d staging.cjpatoilo.com",
    "lint": "prettier-standard --check",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "engines": {
    "node": "^12.18.0",
    "npm": "^6.14.5"
  },
  "prettier": {
    "jsxSingleQuote": false,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier-standard --format",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  }
