{
  "name": "cjpatoilo.github.io",
  "version": "0.4.1",
  "description": "Life Hacker based in Brazil. Engineer of things. Creator of Milligram and Airform.",
  "homepage": "https://cjpatoilo.com",
  "repository": "cjpatoilo/cjpatoilo.github.io",
  "license": "MIT",
  "author": "CJ Patoilo <cjpatoilo@gmail.com>",
  "private": true,
  "dependencies": {
    "font-awesome": "4.7.0",
    "google-fonts": "1.0.0",
    "milligram": "^1.4.0",
    "raven-js": "3.27.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-ga": "3.0.0",
    "react-router": "5.2.0",
    "react-static": "7.4.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.38",
    "@types/react-dom": "16.9.8",
    "@types/react-ga": "^2.3.0",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-router": "5.1.7",
    "@types/webpack-env": "1.15.2",
    "babel-plugin-inline-dotenv": "1.5.0",
    "convert-tsconfig-paths-to-webpack-aliases": "0.9.2",
    "gh-pages": "3.0.0",
    "husky": "4.2.5",
    "lint-staged": "^10.2.11",
    "prettier-standard": "16.3.0",
    "rimraf": "3.0.2",
    "surge": "0.21.3",
    "sw-precache": "5.2.1",
    "ts-loader": "7.0.5",
    "typescript": "3.9.5"
  },
  "scripts": {
    "build": "rimraf dist && react-static build && sw-precache --verbose --config sw-precache.config.js",
    "deploy:production": "NODE_ENV=production npm run build && gh-pages -d dist -b master",
    "deploy:staging": "NODE_ENV=staging npm run build && surge -p dist -d staging.cjpatoilo.com",
    "start": "react-static start"
  },
  "engines": {
    "node": "^12.18.0",
    "npm": "^6.14.5"
  },
  "prettier": {
    "jsxSingleQuote": false,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier-standard --format",
      "git add"
    ]
  },
  "babel": {
    "extends": "react-static/.babelrc",
    "plugins": [
      "inline-dotenv"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  }
}
